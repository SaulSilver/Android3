<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:id="@+id/weather_widget_whole">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/weather_icon_widget"
            android:layout_width="58dp"
            android:layout_height="42dp"
            android:contentDescription="Weather icon"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/update_btn"
            android:layout_width="46dp"
            android:layout_height="40dp"
            android:contentDescription="update icon"
            android:src="@drawable/update" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/city_name_tv_widget"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/weather_description_widget"
            android:layout_width="fill_parent"
            android:layout_height="80sp"
            android:paddingLeft="3px"
            android:gravity="center_vertical"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/weather_code_widget"
            android:layout_width="fill_parent"
            android:layout_height="20sp"
            android:paddingLeft="3px"
            android:gravity="center_vertical"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>